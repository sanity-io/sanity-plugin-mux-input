{
  "env": {
    "node": false,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint-config-sanity",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/jsx-uses-vars": [2],
    "newline-per-chained-call": 0,
    "sort-imports": 0,
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          ".*:.*"
        ]
      }
    ],
    "prettier/prettier": "error",
    "import/no-extraneous-dependencies": "off",
    "import/unambiguous": "off"
  },
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "import/ignore": [
      "\\.css$",
      ".*node_modules.*",
      ".*:.*"
    ]
  },
  "plugins": [
    "import",
    "prettier",
    "react"
  ]
}
